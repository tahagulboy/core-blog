@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
	<h4>Yorumlar</h4>
    @if (!Model.Any())
    {
        <p>Henüz hiç yorum yok. İlk yorumu siz yapın.</p>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/lib/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>@item.CommentContent</p>
                </div>
            </div>
        }
    }
</div>